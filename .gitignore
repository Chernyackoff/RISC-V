#########
# Exclude ALL initially - Specific inclusions follow
# This ensures only explicitly included files/folders are tracked.
#########
*
/*

#########
# Include folders (needed to descend into directories)
# This allows Git to see files within folders that match include patterns below.
#########
!*/

#########
# Enable service files
#########
!*.gitignore
!*README.md
!*makefile
!*LICENSE

#########
# Source files:
#########
!*.vhd
!*.v
!*.sv
!*.edn
!*.m

#########
# Simulation logic analyzer
#########
!*.wcfg
!*.coe

#########
# MIG
#########
!*.prj
!*.mem

#########
# Constraint files
#########
!*.xdc

#########
# TCL - files
#########
!*.tcl
!*.gtcl

#########
# Reports
#########
!*.rpt
!*.txt
!*.vdi

#########
# C-files
#########
!*.c
!*.h
!*.elf
!*.cu
!*.cuh
!*.cpp
!*.hpp

#########
# DATA files
#########
!*.dat

#########
# Documentation
#########
!*.pdf
!*.DOXY

#########
# IP block files
#########
!*.xml

#########
# Vivado Block Design files
#########
!*.bd           # Include Block Design description files
!bd_backup/     # Include the bd_backup directory itself
!bd_backup/**   # Include all contents within the bd_backup directory recursively

#########
